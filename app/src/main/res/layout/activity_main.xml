<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:title=""
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/toolbar_logo"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cat"
            android:tint="@color/white"/>
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="냥냥크라임"
            android:fontFamily="@font/mangobyeolbyeol"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"/>
        </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:fontFamily="@font/mangobyeolbyeol"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="6dp"
            android:fontFamily="@font/mangobyeolbyeol"
            android:text="@string/intro"
            android:textColor="#aaFFFFFF"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginVertical="4dp"
                android:layout_marginRight="4dp"
                android:text="안전 지킴이"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="14sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#a0FFFFFF"
                android:textStyle="bold"
                android:textColor="@color/primary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="4dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#a0FFFFFF"
                android:text="따뜻한 상담"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="14sp"
                android:textColor="@color/primary"/>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_gravity="right"
            android:src="@drawable/realcat"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mapbtn"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="start|center_vertical"
            android:text="범죄 주의 \n확인하기"
            android:textColor="@color/primary"
            android:textSize="19sp"
            android:textStyle="bold"
            app:cornerRadius="24dp"
            app:icon="@drawable/map"
            app:iconSize="40dp"
            app:iconTint="@color/primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/chatbtn"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:backgroundTint="#FFBC70"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="start|center_vertical"
            android:text="냥냥상담봇\n피해 상담"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            app:cornerRadius="24dp"
            app:icon="@drawable/message"
            app:iconSize="40dp"
            app:iconTint="@color/white" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        app:cornerRadius="24dp"
        android:backgroundTint="#F3D881"
        app:icon="@drawable/notice"
        app:iconSize="40dp"
        app:iconPadding="20dp"
        android:gravity="start|center_vertical"
        app:iconTint="#E27500"
        android:fontFamily="@font/pretendard_bold"
        android:textStyle="bold"
        android:textColor="#E27500"
        android:text="알림 확인하기"
        android:textSize="19sp"/>

</LinearLayout>